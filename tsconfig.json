{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noEmitHelpers": false,
        "importHelpers": false,
        "noEmitOnError": false,
        "declaration": true,
        "sourceMap": true,
        "types": [
            "node"
        ],
        "lib": [
            "dom",
            "es2015.iterable",
            "es2015.promise",
            "es2015"
        ],
        "baseUrl": ".",
        "paths": {
            "*": [
                "./node_modules/*"
            ],
            "db":[
                "./db/*"
            ]
        }
    },
    "include": [
        "src",
        "models",
        "repository"
    ],
    "exclude": [
        "node_modules"
    ]
}